    },
    
    "contextual_rules": {
      "image_context": {
        "large_crowd_events": {
          "description": "Large gatherings that might be protests or political events",
          "triggers": ["crowd", "gathering", "protest", "demonstration", "rally"],
          "severity": "low",
          "confidence_threshold": 0.4
        },
        
        "educational_content": {
          "description": "Educational or academic content that should be treated more leniently", 
          "triggers": ["classroom", "school", "education", "learning", "academic", "textbook"],
          "severity_modifier": -1,
          "confidence_threshold": 0.7
        },
        
        "medical_content": {
          "description": "Medical or health-related content that may show human body",
          "triggers": ["medical", "health", "anatomy", "surgery", "hospital", "doctor"],
          "severity_modifier": -1,
          "confidence_threshold": 0.6
        },
        
        "artistic_content": {
          "description": "Artistic content that may contain nudity in classical art context",
          "triggers": ["art", "sculpture", "painting", "museum", "gallery", "artistic"],
          "severity_modifier": -1,
          "confidence_threshold": 0.8
        }
      },
      
      "text_context": {
        "news_reporting": {
          "description": "News articles discussing sensitive topics objectively",
          "triggers": ["news", "report", "journalist", "breaking news", "according to"],
          "severity_modifier": -1,
          "confidence_threshold": 0.6
        },
        
        "academic_discussion": {
          "description": "Academic or scholarly discussion of sensitive topics",
          "triggers": ["research", "study", "analysis", "academic", "scholar", "university"],
          "severity_modifier": -1,
          "confidence_threshold": 0.7
        },
        
        "historical_content": {
          "description": "Historical documentation or discussion",
          "triggers": ["history", "historical", "ancient", "centuries ago", "in the past"],
          "severity_modifier": -1,
          "confidence_threshold": 0.6
        }
      }
    },
    
    "exemptions": {
      "safe_categories": [
        "business", "technology", "science", "nature", "food", "sports",
        "travel", "family", "children", "pets", "architecture", "landscape"
      ],
      
      "educational_exemptions": {
        "anatomy_education": {
          "description": "Educational anatomy content",
          "keywords": ["anatomy", "medical education", "biology", "physiology"],
          "severity_override": "safe"
        },
        
        "health_education": {
          "description": "Health and wellness education",
          "keywords": ["health education", "wellness", "fitness", "nutrition"],
          "severity_override": "safe"
        }
      }
    },
    
    "processing_rules": {
      "confidence_adjustments": {
        "high_quality_image": {
          "condition": "image_quality > 0.8",
          "confidence_boost": 0.1
        },
        
        "low_quality_image": {
          "condition": "image_quality < 0.3", 
          "confidence_penalty": 0.2
        },
        
        "multiple_violations": {
          "condition": "violation_count > 3",
          "severity_escalation": true
        }
      },
      
      "thresholds": {
        "minimum_text_length": 10,
        "minimum_image_size": 50,
        "maximum_processing_time": 300,
        "batch_size_limit": 100
      }
    },
    
    "reporting": {
      "violation_categories": {
        "critical": ["adult_content", "violence", "illegal_substances"],
        "warning": ["alcohol_content", "gambling", "inappropriate_content"],
        "notice": ["religious_content", "dating_romance", "western_holidays"],
        "info": ["political_content"]
      },
      
      "escalation_rules": {
        "immediate_review": {
          "conditions": ["severity == high", "confidence > 0.9"],
          "action": "flag_for_immediate_review"
        },
        
        "manual_review": {
          "conditions": ["severity == high", "confidence > 0.7"],
          "action": "queue_for_manual_review"
        },
        
        "automatic_action": {
          "conditions": ["severity == medium", "confidence > 0.8"],
          "action": "apply_content_warning"
        }
      }
    }
  },
  
  "metadata": {
    "rule_count": 45,
    "categories": 12,
    "last_validation": "2024-01-15T10:00:00Z",
    "schema_version": "1.0",
    "maintainer": "Content Moderation Team",
    "review_frequency": "monthly"
  }
}